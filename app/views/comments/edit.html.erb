		<%=form_for(:comment, :url=>{:action => 'update', :id=>@comment.id}, :html => {:class=>"ajax_request no_history"}) do |f| %>

	<%= f.text_area :comment %>

	<div class="submit">
		<%= link_to("<< back", :back, :class=>"ajax_request cancel no_history") %>
