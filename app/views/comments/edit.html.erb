<div id="reply_<%= @comment.id %>" class="reply">
	<div class="content">
	<p>Your comment:</p>
		<%=form_for(:comment, :url=>{:action => 'update', :id=>@comment.id}, :html => {:class=>"ajax_request"}) do |f| %>

	<%= f.text_area :comment %>

	<div class="submit">
		<%= link_to("<< back", :back, :class=>"ajax_request cancel") %>
		<%= submit_tag("add comment")%>
	</div>
	<% end %>
	</div>
	
	<div class="f"><div><div> </div></div></div>
</div>
