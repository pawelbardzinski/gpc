<div id="reply_<%= @comment.id %>" class="reply">
	<div class="gpu"></div>
	<div class="content">
	<p>Your comment:</p>
	<%=form_for(:comment, :url=>{:action => 'replied', :id=>@comment.id, :previous_id=>@previous_comment.id,:topic_id=>@previous_comment.topic_id}, :html => {:class=>"ajax_request no_history"}) do |f| %>

	<%= f.text_area :comment %>

	<div class="submit">
		<%= link_to("<< back", :back, :class=>"ajax_request cancel no_history") %>
		<%= submit_tag("add comment") %>
	</div>
	<% end %>
	</div>
	
	<div class="f"><div><div> </div></div></div>
</div>
